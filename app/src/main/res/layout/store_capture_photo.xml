<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.code_evolve_8472.springphotoapp.StoreCapturePhoto"
    android:background="@color/background">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="340dp"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_choose_photo"
        android:layout_below="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Photo Name:"
        android:gravity="center"
        android:textColor="#3b3a36"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/editText_pictre_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_pictre_name"
        android:hint="Enter name"
        android:textColorHint="@color/white"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Choose Photo"
        android:id="@+id/btn_choose_photo"
        android:background="@color/btn_light"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Upload Photo"
        android:id="@+id/btn_upload_photo"
        android:background="@color/btn_dark"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/btn_choose_photo"
        android:layout_toStartOf="@+id/btn_capture_photo" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Capture Photo"
        android:id="@+id/btn_capture_photo"
        android:background="@color/btn_light"
        android:textColor="@color/white"
        android:layout_below="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

</RelativeLayout>
